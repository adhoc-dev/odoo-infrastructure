<?xml version="1.0" encoding="utf-8"?>
<!-- infrastructure.database.user -->
<openerp>
<data>

<!-- TREEVIEW -->
<record id="view_infrastructure_database_user_tree" model="ir.ui.view">
    <field name="name">infrastructure.database.user.tree</field>
    <field name="model">infrastructure.database.user</field>
    <field name="arch" type="xml">
        <tree string="Database Users" editable="top">
            <field name="login"/>
            <field name="name"/>
            <field name="email"/>
            <field name="partner_id"/>
            <button name="create_partner" string="Create Partner" help="Create partner related to this line" type="object" icon="gtk-add" attrs="{'invisible': [('partner_id', '!=', False)]}"/>
            <field name="user_id"/>
            <button name="create_user" string="Create User" help="Create user related to partner" type="object" icon="gtk-add" attrs="{'invisible': [('user_id', '!=', False)]}"/>
        </tree>
    </field>
</record>

</data>
</openerp>
